{
  "manifest_version": 2,

  "name": "no evil website",
  "description": "a chrome extension you can keep away from which you don't want to see.",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "webRequest",
    "tabs",
    "http://*/*",
    "https://*/*",
    "webRequestBlocking"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "nobaidu.jpg"
  ]
}
